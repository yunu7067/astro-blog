{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@com/*": [
        "./src/components/*"
      ],
      "@style/*": [
        "./src/styles/*",
      ],
      "@util/*": [
        "./src/utils/*",
      ],
      "@libs": [
        "./src/libs/index.ts"
      ],
      "@types": [
        "./src/types/index.ts"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}