---
import type { HTMLElement } from "node-html-parser";

export interface Props {
	contents: HTMLElement[]
}

const { contents } = Astro.props as Props;
---

<div class="bg-gray-200 rounded-sm p-4 mb-8" aria-label="Table of Contents">
	<p class="text-xl mb-2">목차</p>
	{ contents.map((el)=> (
	<div class={`toc mb-1 text-lg ${el.tagName.replace(`H`, `depth` )}`}>
		<a href={`#${el.id}`}>{el.textContent}</a>
	</div>
	)) }
</div>

<style>
	.toc.depth1 {}

	.toc.depth2 {
		padding-left: 2rem;
	}
</style>