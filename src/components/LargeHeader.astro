---
import type { SocialConfigType } from "../types/ConfigType";
import Avatar from "./Avatar.astro";
import SocialIcon from "./SocialIcon";


export interface Props {
	avatar?: string;
	title?: string;
	description?: string;
	socials?: SocialConfigType[];
}

const props = Astro.props as Props;
---

<header class="w-full">
	<div class="max-w-3xl w-full my-4 flex flex-col items-center mx-auto font-light text-gray-700">
		{props.avatar &&
		<Avatar src={props.avatar} alt="avatar" />}
		{props.title && <h1 class="mt-2 text-3xl">{props.title}</h1>}
		{props.description && <p>{props.description}</p>}
		{props.socials &&
		<div class="p-1 flex flex-row flex-wrap text-xl">
			{props.socials.map((social) => (
			<SocialIcon social={social} />
			))}
		</div>}
	</div>
</header>